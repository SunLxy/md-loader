{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "esModuleInterop": true,
    "declaration": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strict": false,
    "skipLibCheck": true,
    "outDir": "lib",
    "baseUrl": ".",
    "jsx": "react"
  },
  "include": ["src"]
}
